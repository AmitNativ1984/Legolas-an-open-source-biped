<?xml version="1.0"?>
<!-- Describing a single and position servo motor -->

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="position_servo" params="prefix parent *origin">

        <!-- Joint to Parent -->
        <joint name="${prefix}_base_joint" type="fixed">
            <parent link="${parent}"/>
            <child link="${prefix}_link" />
            <xacro:insert_block name="origin" />
        </joint>
        
        <!-- Servo Base -->
        <link name="${prefix}_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.04 0.02 0.04"/>
                </geometry>
                <material name="orange"/>
            </visual>
            <collision>
                <origin xyz="0 0 0.0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.04 0.02 0.04"/>
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}_joint" type="revolute">
            <parent link="${prefix}_link"/>
            <child link="${prefix}_arm_link"/>
            <origin xyz="0.01 0 0.02" rpy="0 0 0"/>
            <axis xyz="0 0 1"/>
            <limit lower="-1.57" upper="2.3" effort="100" velocity="1.0"/>
        </joint>
        
        
        <!-- Servo Arm -->
        <link name="${prefix}_arm_link">
            <collision>
                <origin xyz="0.015 0 0.004" rpy="0 0 0"/>
                <geometry>
                    <box size="0.035 0.015 0.008"/>
                </geometry>
            </collision>
            <visual>
                <origin xyz="0.015 0 0.004" rpy="0 0 0"/>
                <geometry>
                    <box size="0.03 0.015 0.008"/>
                </geometry>
                <material name="blue"/>
            </visual>
        </link>

        <!-- Servo Arm Connection Joint-->
        <joint name="${prefix}_arm_connection_joint" type="fixed">
            <parent link="${prefix}_arm_link"/>
            <child link="${prefix}_arm_connection_link"/>
            <origin xyz="0.015 0 0.008" rpy="0 0 0"/>
            <axis xyz="0 0 1"/>
            <limit lower="-1.57" upper="2.3" effort="100" velocity="1.0"/>
        </joint>

        <!-- Servo Arm Connection Link-->
        <link name="${prefix}_arm_connection_link"/>                    
    
    </xacro:macro>
</robot>

