// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"name": "${localWorkspaceFolderBasename}",
	"dockerFile": "Dockerfile",
	"build": {
		"args": {
			"BASE_IMAGE": "ros:humble-ros-base",
			"USERNAME": "${localEnv:USER}",
		}
	},
	"privileged": true,
	"runArgs": [
		"--network=host",
		"--privileged",
		"--cap-add=SYS_PTRACE",
		"--security-opt=seccomp:unconfined",
		"--security-opt=apparmor:unconfined",
		"--ipc=host",
		"--pid=host",
		"--ulimit=memlock=-1",
		"--ulimit=stack=6710886",
		"--gpus=all",
		"--runtime=nvidia"

	],
	"remoteUser": "${localEnv:USER}",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/${localEnv:USER}/${localWorkspaceFolderBasename},type=bind",
	"workspaceFolder": "/home/${localEnv:USER}/${localWorkspaceFolderBasename}",
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}", // for GUI applications
		"SSH_AUTH_SOCK": "/ssh-agent",
        "CYCLONEDDS_URI": "file:///dds_profiles/cyclone/humble_cyclonedds_config.xml",
        "ROS_DOMAIN_ID": "${localEnv:ROS_DOMAIN_ID}"
	},
	"mounts": [
		"source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached",
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
		"source=/home/${localEnv:USERNAME}/.ssh,target=/home/${localEnv:USERNAME}/.ssh,type=bind,consistency=cached",
		// "source=/home/${localEnv:USERNAME}/DATA,target=/DATA,type=bind,consistency=cached",
        "source=/dev/shm,target=/dev/shm,type=bind",
		"source=/home/${localEnv:USERNAME}/DEV/dds_profiles/cyclone/humble_cyclonedds_config.xml,target=/dds_profiles/cyclone/humble_cyclonedds_config.xml,type=bind,consistency=cached",
		// "source=/dev/bus/usb,target=/dev/bus/usb,type=bind,consistency=cached"
	],
	"postCreateCommand": "sysctl -w net.core.rmem_max=2147483647",
	"customizations": {
		"vscode": {
			"extensions": [
				"dotjoshjohnson.xml",
				"zachflower.uncrustify",
				"ms-python.python",
				"ms-vscode.cpptools",
				"redhat.vscode-yaml",
				"ms-iot.vscode-ros",
				"smilerobotics.urdf",
				"streetsidesoftware.code-spell-checker",
				"twxs.cmake",
				"yzhang.markdown-all-in-one",
				"mhutchie.git-graph",
				"GitHub.copilot",
				"ms-toolsai.jupyter"
			]
		}
	}
}